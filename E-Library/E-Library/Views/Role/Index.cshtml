@using E_Library.Models.Role
@model IEnumerable<RoleListVM>
@{
    ViewData["Title"] = "Index";
    int serialNo = 1;
}
<br />
<br />
<h1 style="text-align:center;color:green;">List of Roles</h1>
@*<div class="row">
    <div class="col-6">
        <h2 class="text-info text-center"></h2>
    </div>
    
</div>*@
<div class="col-6 text-right">
    <a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus"></i>&nbsp; Add New Role</a>
    
</div>
<br />
<style>
    .table-info th {
        text-align: center;
        font-family: "Trirong",serif;
    }
</style> 


<div>
    <table class="table table-bordered text-center">
        <tr class="table-info">
            <th>Serial No</th>
            <th>Name</th>
            <th>Action</th>

        </tr>
        @foreach (var data in Model)
        {
            <tr>
                <td>@(serialNo++)</td>
                <td>@data.RoleName</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@data.Id"><i class="far fa-edit"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@data.Id"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </td>
                
               
            </tr>
        }

    </table>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.success(save);
            }
        })
    </script>


    <script type="text/javascript">
        $(function () {
            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.success(edit);
            }
        })
    </script>

   

    <script type="text/javascript">
        $(function () {
            var done = '@TempData["done"]'
            if (done != '') {
                alertify.error(done);
            }
        })
    </script>

}