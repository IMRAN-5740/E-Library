@using E_Library.Areas.Admin.Models;
@model  RoleUserVm
@{
    ViewData["Title"] = "Assign";
}
<br />
<h2 class="text-info">Assign Role </h2>

<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h5>@ViewBag.message</h5>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserId"></label>
            </div>
            <div class="col-5">
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
                @* <input asp-for="UserId" class="form-control" />*@

            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-5">
             
                 <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
                @* <input asp-for="SpecialTagId" class="form-control" />*@

            </div>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>

     

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Assign" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    <script type="text/javascript">
        $(function () {
            var done = '@TempData["done"]'
            if (done != '') {
                alertify.error(done);
            }
        })
    </script>

    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.success(save);
            }
        })
    </script>
    }

    
