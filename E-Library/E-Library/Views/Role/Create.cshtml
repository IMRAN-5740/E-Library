@model E_Library.Models.Role.RoleCreateVM
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Add New Role</h2>

<form asp-action="Create" name="registration" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h4>@ViewBag.message</h4>
        <div class="form-group row">
            <div class="col-2">
                <label >Role Name</label>
            </div>
            <div class="col-5">

                <input id="name" name="name" class="form-control" value=" @ViewBag.name" />

            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    <script>

    
    $(function() {

  $("form[name='registration']").validate({

    rules: {
      name: "required",
    },
 
    messages: {
     name: "Please enter your RoleName"
    },
    submitHandler: function(form) {
      form.submit();
    }
  });
});
    </script>
}


