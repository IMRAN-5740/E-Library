@model E_Library.Models.Role.RoleCreateVM
@{
    ViewData["Title"] = "Create";
}
<br />

<h1 style="text-align:center;color:green">Role Create Form</h1>
<hr />

<div class="row">

    <form asp-action="Create" method="post">
        <div class="p-4 rounded border row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4 text-black">
                        <label asp-for="RoleName"></label>
                    </div>
                    <div class="col-8">

                        <input asp-for="RoleName" class="form-control" />

                    </div>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-outline-success" value="Create" />
                    <a class="btn btn-outline-info" asp-action="Index" asp-controller="Role"><i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp; Back To List</a>
                </div>
            </div>
        </div>

    </form>

</div>

@section scripts{
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml"></partial>
    <script src="#"></script>
}


