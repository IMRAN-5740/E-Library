@model E_Library.Models.Role.RoleEditVM
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Role Updatation Form</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>


            <div class="form-group">

                <input type="submit" class="btn btn-outline-success" value="Update Data" />
                <a class="btn btn-outline-info" asp-action="Index" asp-controller="Role"><i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp; Back To List</a>
            </div>
        </form>
    </div>
</div>


