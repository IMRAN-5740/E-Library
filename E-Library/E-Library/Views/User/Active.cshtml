            </div>
            <div class="col-5">
                <input asp-for="DeptName" class="form-control" readonly="readonly" />

            </div>
            <span asp-validation-for="DeptName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-5">
                <input asp-for="PhoneNumber" class="form-control" readonly="readonly" />

            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address"></label>
            </div>
            <div class="col-5">
                <input asp-for="Address" class="form-control" readonly="readonly" />

            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <h5>If you want to Active this User...?</h5>
@*            <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>*@
            <input type="submit" class="btn btn-primary" value="Active" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
