@model E_Library.Models.AuthUser.UserEditVM

@{
    ViewData["Title"] = "Edit";
}
<h2 class="text-info">User Registration Update Form</h2>

<form asp-action="Edit" method="post" id="user-form" >
    <div class="p-4 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        <h4>@ViewBag.message</h4>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input type="hidden" asp-for="Id" />
                
                <input asp-for="UserName" class="form-control" readonly="readonly" />

            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-5">
                <input asp-for="FirstName" class="form-control" />

            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MiddleName"></label>
            </div>
            <div class="col-5">
                <input asp-for="MiddleName" class="form-control" />

            </div>
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" class="form-control" />

            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegNo"></label>
            </div>
            <div class="col-5">
                <input asp-for="RegNo" class="form-control" />

            </div>
            <span asp-validation-for="RegNo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DeptName"></label>
            </div>
            <div class="col-5">
                <input asp-for="DeptName" class="form-control" />

            </div>
            <span asp-validation-for="DeptName" class="text-danger"></span>
        </div>
        

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" class="form-control" readonly="readonly" />

            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-5">
                <input asp-for="PhoneNumber" placeholder="Mobile Number" class="form-control" type="number" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address"></label>
            </div>
            <div class="col-5">
                <input asp-for="Address" class="form-control" />

            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OldPassword"></label>
            </div>
            <div class="col-5">
                <input asp-for="OldPassword" type="password" class="form-control" />

            </div>
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NewPassword"></label>
            </div>
            <div class="col-5">
                <input asp-for="NewPassword" type="password" class="form-control" />

            </div>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update Data" />
            <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-arrow-right-to-bracket"></i> &nbsp Back to List</a>
        </div>
    </div>
</form>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }

    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,

                    },
                    FirstName: {
                        required: true,

                    },
                    LastName: {
                        required: true,

                    },
                    Email: {
                        required: true,

                    },
                    DeptName: {
                        required: true,

                    },
                    RegNo: {
                        required: true,

                    },

                    PasswordHash: {
                        required: true,

                    },
                    PhoneNumber: {
                        required: true,

                    }

                },
                messages:
                {
                    UserName: "Enter your User Name",
                    FirstName: "Enter your First Name",
                    Lastname: "Enter your Last Name",
                    Email: "Please Enter your Email",
                    PasswordHash: "Please Enter Valid Password",
                    PhoneNumber: "Enter your Phone Number"
                    DeptName: "Please Enter Department Name",
                    RegNo: "Enter your Registration Name"
                }
            });
        });
    </script>

}

