@model E_Library.Models.LibraryBook.BookCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align:center;color:green">Book Create Form</h1>



<div class="row">

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-8">


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookName"></label>
                    </div>
                    <div class="col-8">
                       @* <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Picture" />*@
                        <input asp-for="BookName"  class="form-control" />

                    </div>
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BookCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BookCode"  class="form-control" />

                    </div>
                    <span asp-validation-for="BookCode" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                    <label for="CategoryId" class="control-label">Category Name</label>
                    </div>
                   @* <div class="col-8">
                        <input asp-for="@Model.Categories.CategoryName" readonly="readonly" class="form-control" />

                    </div>*@
                      <div class="col-8">
                            <select type="text" asp-items="@Model.Categories" id="CategoryId" name="CategoryId" class="form-control">
                                <option value="">.Select Category.</option>
                            </select>
                      </div>
                    <span asp-validation-for="Categories" class="text-danger"></span>

                </div>


                <div class="form-group row">
                    <div class="col-4">
                    <label for="AuthorId" class="control-label">Author Name</label>
                    </div>
                   <div class="col-8">
                        @*<input asp-for="@Model.Authors.AuthorName" readonly="readonly" class="form-control" />*@
                        <select type="text" asp-items="@Model.Authors" id="AuthorId" name="AuthorId" class="form-control">
                            <option value="">.Select Author.</option>
                        </select>
                    </div>
                      <span asp-validation-for="Authors" class="text-danger"></span>
                   
                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PublicationName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PublicationName"  class="form-control" />

                    </div>
                    <span asp-validation-for="PublicationName" class="text-danger"></span>
                </div>


                    <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Picture"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Picture" type="file" class="form-control" />

                    </div>
                     <span asp-validation-for="Picture" class="text-danger"></span>
                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price"  class="form-control" />

                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>



                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Quantity" class="form-control" />

                    </div>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>



                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IsAvailable"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="IsAvailable" class="" type="checkbox" />
                     
                    </div>
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
          
                <br />
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-outline-success" value="Create Data" />
                    <a asp-action="Index" class="btn btn-outline-success"> <i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp;Back to List</a>
                </div>
     

               
            </div>
            <div class="col-1"></div>
            <div class="col-3">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width:150px" />
                </div>

            </div>
            </div>
    </form>
</div>

@section Scripts
    {

    <script>
        $(document).ready(function)()
        {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(Picture).val();
        }
    </script>
    <script>

        $("#Picture").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>

}