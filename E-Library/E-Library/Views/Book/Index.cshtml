@using E_Library.Models.LibraryBook
@model IEnumerable<BookListVM>

@{
    ViewData["Title"] = "Index";
    int serialNo = 1;
}
<h1 style="color:green; text-align:center">Book  Index Form</h1>
<br />
<a class="btn btn-success" asp-action="Create" asp-controller="Book"> <i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp;New Book</a>

<table border="3" class="table table-bordered table-hover table-striped">
    <thead class="text-center">
        <tr>
            <th>Serial No</th>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
          
            <th>
                 @Html.DisplayNameFor(model => model.Authors.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories.CategoryName)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.PublicationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>@(serialNo++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookCode)
                </td>

                <td>
                    <img src="~/@item.Picture" width="90" height="100" />
                </td>
               
              
                <td>
                    
                    @Html.DisplayFor(model => item.Authors.AuthorName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Categories.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>item.Quantity)
                </td>
                @if(item.IsAvailable==false)
                {
                    <td style="color:red;font-size:larger">
                        Stock Out
                    </td>
                }
                else
                {
                    <td style="color:green;font-size:larger">
                        Stock Available
                    </td>
                }
               
                <partial name="_ButtonPartial" model="@item.Id"></partial>
            </tr>
        }
    </tbody>
</table>