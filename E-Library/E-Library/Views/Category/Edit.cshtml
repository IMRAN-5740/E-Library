@model E_Library.Models.BooksCategory.CategoryEditVM

@{
    ViewData["Title"] = "Edit";
}


<h4>Category Edit Form</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
           
            
            <div class="form-group">
                
                <input type="submit" class="btn btn-outline-success" value="Update Data" />
                <a class="btn btn-outline-info" asp-action="Index" asp-controller="Category"><i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp; Back To List</a>
            </div>
        </form>
    </div>
</div>


