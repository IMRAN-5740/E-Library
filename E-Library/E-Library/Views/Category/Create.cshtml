@model E_Library.Models.BooksCategory.CategoryCreateVM

@{
    ViewData["Title"] = "Create";
}
<h1 style="text-align:center;color:green">Category Create Form</h1>
<hr />
<div class="row">
    
        <form asp-action="Create" method="post">
            <div class="p-4 rounded border row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-8">
            <div class="form-group row">
                <div class="col-4 text-black">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-8">
                   
                    <input asp-for="CategoryName" class="form-control" />

                </div>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" class="btn btn-outline-success" value="Create" />
                <a class="btn btn-outline-info" asp-action="Index" asp-controller="Category"><i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp; Back To List</a>
               </div>
           </div>
        </div>

        </form>
   
</div>

@section scripts{
        <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml"></partial>
        <script src="#"></script>
}
